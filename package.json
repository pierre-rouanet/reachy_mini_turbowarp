{
  "name": "reachy-mini-turbowarp-extension",
  "version": "0.2.0",
  "description": "TurboWarp (Scratch 3.0) custom extension for Reachy Mini robot",
  "type": "module",
  "main": "dist/extension.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "lint": "eslint src tests --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\""
  },
  "keywords": [
    "turbowarp",
    "scratch",
    "extension",
    "reachy-mini",
    "robot",
    "education"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@turbowarp/types": "git+https://github.com/TurboWarp/types-tw.git#tw",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "globals": "^16.5.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
